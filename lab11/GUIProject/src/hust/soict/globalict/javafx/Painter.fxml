<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.globalict.javafx.PainterController">
   <center>
      <BorderPane maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <left>
            <VBox maxHeight="1.7976931348623157E308" prefHeight="464.0" prefWidth="80.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="8.0" />
               </BorderPane.margin>
               <children>
                  <TitledPane animated="false" prefHeight="94.0" prefWidth="80.0" text="Tools">
                    <content>
                      <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="55.0" prefWidth="78.0">
                           <children>
                              <RadioButton fx:id="Pen" layoutX="10.0" layoutY="7.0" mnemonicParsing="false" onAction="#choosePen" text="Pen">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                                 <toggleGroup>
                                    <ToggleGroup fx:id="tools" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="Eraser" layoutX="10.0" layoutY="33.0" mnemonicParsing="false" onAction="#chooseEraser" text="Eraser" toggleGroup="$tools">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </RadioButton>
                           </children>
                        </AnchorPane>
                    </content>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TitledPane>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clearButtonPressed" text="Clear">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <Pane fx:id="drawingAreaPane" onMouseClicked="#drawingAreaMouseDragged" onMouseDragged="#drawingAreaMouseDragged" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
</BorderPane>
